{
  "compilerOptions": {
    /* build option */
    "target": "ES2022",
    "module": "ES2022",
    "lib": ["DOM", "ESNext"],
    "moduleResolution": "Bundler",
    "removeComments": true,

    /* Generates corresponding '.map' file. */
    "sourceMap": true,

    /* Enable strict options. */
    "strict": true,
    "noImplicitReturns": true,

    /* resolve options */
    "baseUrl": "./",
    "paths": {
      "@src/*": ["src/*"]
    },
    "resolveJsonModule": true,

    /* react options */
    "jsx": "react"
  }
}
